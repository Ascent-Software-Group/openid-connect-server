{
    "name": "nl.idaas/openid-server",
    "description": "OpenID Connect server for PHP",
    "type": "library",
    "config": {
        "preferred-install": {
            "league/oauth2-server": "source",
            "*": "dist"
        }
    },
    "require": {
        "league/oauth2-server": "^7|^8"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "laminas/laminas-diactoros": "^2.1.2"
    },
    "autoload": {
        "psr-4": {
            "Idaas\\OpenID\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IdaasTests\\": "tests/",
            "LeagueTests\\": "vendor/league/oauth2-server/tests/"
        }
    },
    "license": "LGPL-3.0-only",
    "authors": [
        {
            "name": "Arie Timmerman",
            "email": "arietimmerman@gmail.com"
        }
    ],
    "scripts": {
        "post-install-cmd": "ls ./vendor/league/oauth2-server/tests/Stubs && chmod 660 ./vendor/league/oauth2-server/tests/Stubs/private.key"
    }
}
